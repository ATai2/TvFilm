<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg">

    <LinearLayout
        android:id="@+id/ll_rigth"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/tab_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/topbar"
            layout="@layout/topbar"
            />
        <LinearLayout
            android:id="@+id/video_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topbar"
            android:layout_toRightOf="@+id/tab_container"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"
                android:paddingBottom="40dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:descendantFocusability="afterDescendants"
                android:fadeScrollbars="false"
                android:focusable="false"
                android:scrollbarFadeDuration="0"
                android:scrollbarThumbVertical="@drawable/scroll"
                android:scrollbarTrackVertical="@drawable/bg_scroll"
                android:scrollbars="vertical"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_container"
        android:layout_width="182dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_left"
        android:focusable="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_menutitle"
            style="@style/Widget.TabIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusable="false"
            android:gravity="center"
            android:text="年份选择"
            android:textColor="@color/white"
            android:textSize="32dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/wheat"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:descendantFocusability="afterDescendants"></android.support.v7.widget.RecyclerView>

    </LinearLayout>



</RelativeLayout>

