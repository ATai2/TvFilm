<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:orientation="vertical"
                android:background="@mipmap/bg">
    <include layout="@layout/topbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ll_init"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/left_menu"
            android:descendantFocusability="afterDescendants"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/rl_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:paddingTop="50dp">

                <TextView
                    android:id="@+id/tv_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rv_letters"
                    android:text="历史播放"
                    android:textColor="@color/white"
                    android:textSize="26sp"/>

                <TextView
                    android:id="@+id/tv_history_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rv_letters"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/tv_history"
                    android:background="@drawable/default_selector_white"
                    android:focusable="true"
                    android:nextFocusDown="@id/rv_history"
                    android:nextFocusLeft="@id/rv_history"
                    android:nextFocusRight="@id/rv_history"
                    android:nextFocusUp="@id/rv_letters"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="清除历史"
                    android:textColor="@color/blueviolet"
                    android:textSize="22sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/tv_history"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_left_history"
                        android:layout_width="30dp"
                        android:layout_height="200dp"
                        android:layout_alignBottom="@id/rv_history"
                        android:src="@drawable/arrow_left"
                        android:visibility="invisible"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_history"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_below="@id/tv_history"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@id/iv_left_history"
                        android:layout_weight="1"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:descendantFocusability="afterDescendants"
                        android:nextFocusUp="@id/edit_search"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        />

                    <ImageView
                        android:id="@+id/iv_right_history"
                        android:layout_width="30dp"
                        android:layout_height="200dp"
                        android:layout_alignBottom="@id/rv_history"
                        android:layout_toRightOf="@id/rv_history"
                        android:src="@drawable/arrow_right"
                        android:visibility="invisible"/>
                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_toRightOf="@+id/left_menu"
                android:layout_weight="1"
                android:descendantFocusability="afterDescendants"
                android:paddingLeft="30dp">

                <TextView
                    android:id="@+id/first_search_text"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="20dp"
                    android:nextFocusUp="@id/recyclerView"
                    android:paddingLeft="30dp"
                    android:paddingRight="40dp"
                    android:text="热门搜索"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:visibility="visible"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/first_search_text"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_left"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/arrow_left"
                        android:visibility="invisible"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:descendantFocusability="afterDescendants"
                        android:nextFocusUp="@id/tv_history_clear"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"/>

                    <ImageView
                        android:id="@+id/iv_right"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/arrow_right"
                        android:visibility="invisible"/>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/left_menu"
            android:descendantFocusability="afterDescendants"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="60dp"
                android:gravity="center_horizontal"
                android:text="搜索结果"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:visibility="visible"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_search"
                android:layout_width="match_parent"
                android:layout_height="530dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="114dp"
                android:descendantFocusability="afterDescendants"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/left_menu"
            android:layout_width="390dp"
            android:layout_height="match_parent"

            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="30dp">


            <EditText
                android:id="@+id/edit_search"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="40dp"
                android:background="@null"
                android:drawableLeft="@drawable/keyboard_search"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:hint="编辑影片首字母"
                android:maxLength="10"
                android:paddingRight="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white60"
                android:textSize="22dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/gold"
                />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="afterDescendants">

                <com.tuojin.tvfilm.keybord.SimpleKeyBoardView
                    android:id="@+id/keyboard_view"
                    android:layout_width="fill_parent"
                    android:layout_height="300dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="50dp"
                    android:background="@android:color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:keyBackground="@android:color/transparent"
                    android:keyTextColor="@color/white"
                    android:visibility="visible"/>
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
