            <!--android:layout_marginRight="12dp"-->
            <!--android:layout_toRightOf="@+id/include1"-->
            <!--android:descendantFocusability="afterDescendants"-->
            <!--/>-->
    </LinearLayout>

    <include
        android:id="@+id/include1"
        layout="@layout/layout_sort_new" />

</RelativeLayout>

