<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_detail_al"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@mipmap/bg"
                android:orientation="vertical"
                android:padding="20dp">

    <include
        android:id="@+id/topbar"
        layout="@layout/topbar"/>

    <RelativeLayout
        android:id="@+id/rl_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topbar">

        <ImageView
            android:id="@+id/iv_filmpic_detail"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp"
            android:scaleType="fitCenter"
            />

        <ImageView
            android:id="@+id/iv_flag"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/big"
            android:visibility="gone"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_filmpic_detail"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_filmname_detail"
                    style="@style/TextAppearance.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="30dp"
                    android:text="电影名"
                    android:textColor="@color/white"
                    android:textSize="34sp"/>

                <TextView
                    android:id="@+id/tv_dbscore_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_filmname_detail"
                    android:layout_marginLeft="100dp"
                    android:layout_toRightOf="@id/tv_filmname_detail"
                    android:text="豆瓣评分"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_dbscore_scor_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_filmname_detail"
                    android:layout_toRightOf="@id/tv_dbscore_detail"
                    android:text="豆瓣评分"
                    android:textColor="@color/gold"
                    android:textSize="24sp"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_filmtype_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_filmname_detail"
                android:layout_below="@id/tv_filmname_detail"
                android:text="电影类型"
                android:textColor="@color/white_50"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_director_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/white_50"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_actors_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/white_50"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_desc_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lines="4"
                android:textColor="@color/white_50"

                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/default_selector_corner"
                    android:focusable="true"
                    android:text="播放"
                    android:textColor="@color/white"
                    android:textSize="32sp"/>

                <Button
                    android:id="@+id/btn_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/default_selector_corner"
                    android:focusable="true"
                    android:layout_marginLeft="24dp"

                    android:text="停止"
                    android:textColor="@color/white"
                    android:textSize="32sp"/>

                <Button
                    android:id="@+id/btn_before"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="24dp"
                    android:background="@drawable/default_selector_corner"
                    android:focusable="true"
                    android:text="快退"
                    android:textColor="@color/white"
                    android:textSize="32sp"/>
                <Button
                    android:id="@+id/btn_next"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="24dp"
                    android:background="@drawable/default_selector_corner"
                    android:focusable="true"
                    android:text="快进"
                    android:textColor="@color/white"
                    android:textSize="32sp"/>

                <Button
                    android:id="@+id/btn_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/default_selector_corner"
                    android:focusable="true"
                    android:text="收藏"
                    android:textColor="@color/white"
                    android:textSize="32sp"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginRight="70dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_position"
                    android:text="00"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <SeekBar
                    android:id="@+id/sb_progress"

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_end"
                    android:text="00"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom"
        android:gravity="center"
        android:text="猜你喜欢"
        android:textColor="@color/wheat"
        android:textSize="24sp"/>

    <LinearLayout
        android:id="@+id/ll_bottom"

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow_left"
            android:visibility="invisible"/>

        <com.tuojin.tvfilm.widget.CustomRecycleView
            android:id="@+id/rv_film_detail"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:descendantFocusability="afterDescendants"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/arrow_right"
            android:visibility="invisible"/>
    </LinearLayout>

</RelativeLayout>