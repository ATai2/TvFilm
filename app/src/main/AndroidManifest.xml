<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tuojin.tvfilm">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- sdcard创建目录与文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 网络访问权限 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".modules.launch.LaunchActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- 电影详情 -->
        <activity
            android:name=".modules.main.FilmDetailActivity"
            android:launchMode="singleTop"/>
        <!-- 搜索界面 -->
        <activity android:name=".modules.search.SearchActivity"/>
        <activity android:name=".modules.search.SearchActivityLeft"/>
        <!-- 主页面 -->
        <activity android:name=".modules.main.MainActivity"/>
        <!-- 分类列表 -->
        <activity android:name=".modules.catelist.CateListActivity"/>
        <activity android:name=".modules.catelist.framecatelist.CateFilmListActivty"/>
        <activity android:name=".modules.catelist.framecatelist.ListViewActivity">
        </activity>
        <!-- 电影类型 -->
        <activity android:name=".modules.catelist.TypeListActivity"/>
        <activity android:name=".modules.catelist.type.TypeActivity"/>
        <!-- 导演列表 -->
        <activity android:name=".modules.catelist.director.DirectorActivity"/>
        <!-- 地区 -->
        <activity android:name=".modules.catelist.area.AreaActivity"/>
        <!-- 演员 -->
        <activity android:name=".modules.catelist.actor.ActorActivity"/>
        <activity
            android:name=".modules.catelist.live.LiveActivity"
            android:screenOrientation="portrait"/>
        <!-- 年份 -->
        <activity android:name=".modules.catelist.time.YearActivity"/>
        <!-- 排行榜 -->
        <activity android:name=".modules.main.sortlist.SortActivity">
        </activity>
        <activity android:name=".modules.catelist.FilmListActivity">
        </activity>
        <activity android:name=".modules.catelist.live.FullScreenLiveActivity">
        </activity>
        <activity android:name=".modules.catelist.live.MP4Activity">
        </activity>

        <service
            android:name=".service.ConnectService"
            android:enabled="true"
            android:exported="true">
        </service>
        <service
            android:name=".service.AutoBahnService"
            android:enabled="true"
            android:exported="true">
        </service>

        <activity
            android:name=".modules.catelist.live.ExoVideoActivity"
            android:label="@string/title_activity_exo_video"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".modules.catelist.live.EMVVActivity">
        </activity>
        <activity android:name=".mp4player.local.LocalActivity">
        </activity>
    </application>

</manifest>